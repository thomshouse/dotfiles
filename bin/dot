#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

set -e

parentDirectory="$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd -P)"
dotfilesDirectory="$(cd "$( dirname "$parentDirectory" )" && pwd -P)"

displayUsageAndExit() {
	echo "dot -- dotfiles management"
	echo ""
	echo "Usage: dot [options]"
	echo ""
	echo "Options:"
	echo "  -e, --edit    Open dotfiles directory for editing"
	echo "  -h, --help    Show this help message and exit"
	exit
}

while test $# -gt 0; do
	case "$1" in
		"-h"|"--help")
			displayUsageAndExit
			;;
		"-e"|"--edit")
			exec "$EDITOR" "$dotfilesDirectory"
			exit
			;;
		"--skip-update")
			SKIP_UPDATE=1
			;;
		*)
			echo "Invalid option: $1"
			displayUsageAndExit
			;;
	esac
	shift
done

if [ -z "$SKIP_UPDATE" ]; then
        echo "› Updating dotfiles"
	cd $HOME/.dotfiles
	OLDREV=$(git rev-parse HEAD)
	git pull --ff-only
	NEWREV=$(git rev-parse HEAD)
	if [ "$OLDREV" == "$NEWREV" ]; then
		sh bin/dot --skip-update
	else
		echo "› Running bootstrap of updated dotfiles"
		sh script/bootstrap
	fi
	exit
fi

if [ -f $HOME/.dotfiles/.bootstrap ]; then
	echo "› WARNING: Previous dotfiles installation did not complete"
	echo "› Re-running bootstrap process..."
	sh script/bootstrap
	exit
fi

export ZSH=$HOME/.dotfiles

# Run unloaders
echo "› $ZSH/script/unload"
$ZSH/script/unload

# Set macOS defaults
echo "› Set defaults"
$ZSH/macos/set-defaults.sh
sudo -k

# Install homebrew
echo "› Install homebrew"
$ZSH/homebrew/install.sh

# Upgrade homebrew
echo "› brew update"
brew update
sudo -k

# Install software
echo "› $ZSH/script/install"
$ZSH/script/install
